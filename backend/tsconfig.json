{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",         // Use ES Modules
    "lib": ["es2016"],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/executable.ts"],
  "exclude": ["node_modules"]
}